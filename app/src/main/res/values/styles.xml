<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="generalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/general_text_size</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="leftTextStyle" parent="generalTextStyle">
        <item name="android:textColor">@color/left_text</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="rightTextStyle" parent="generalTextStyle">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="lineStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@color/left_text</item>
    </style>

    <style name="Toolbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
        <item name="titleMarginStart">15dp</item>
        <item name="android:paddingRight">11dp</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21.3sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
